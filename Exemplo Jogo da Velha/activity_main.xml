<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jogo da Velha"
        android:layout_marginTop="30dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modo de jogo:"
        android:paddingLeft="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioPvp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:button="@android:color/transparent"
                android:layout_weight="1"
                android:checked="true"
                android:onClick="swapBtn"
                android:text="(X) Jogador vs Jogador" />

            <RadioButton
                android:id="@+id/radioPve"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:button="@android:color/transparent"
                android:layout_weight="1"
                android:onClick="swapBtn"
                android:text="(  ) Jogador vs Computador" />
        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/btnStart"
        android:layout_width="162dp"
        android:layout_height="63dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:backgroundTint="@color/black"
        android:text="Iniciar"
        android:onClick="Start"/>

    <TableLayout
        android:layout_width="368dp"
        android:layout_height="374dp"
        android:layout_gravity="center">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <ImageButton
                android:id="@+id/ib00"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="ib00"
                app:srcCompat="@android:drawable/divider_horizontal_dark"
                android:scaleType="fitCenter"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/ib01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="ib01"
                app:srcCompat="@android:drawable/divider_horizontal_dark"
                android:scaleType="fitCenter"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/ib02"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="ib02"
                app:srcCompat="@android:drawable/divider_horizontal_dark"
                android:scaleType="fitCenter"
                tools:ignore="SpeakableTextPresentCheck" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/ib10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="ib10"
                app:srcCompat="@android:drawable/divider_horizontal_dark"
                android:scaleType="fitCenter"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/ib11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="ib11"
                app:srcCompat="@android:drawable/divider_horizontal_dark"
                android:scaleType="fitCenter"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/ib12"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="ib12"
                app:srcCompat="@android:drawable/divider_horizontal_dark"
                android:scaleType="fitCenter"
                tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/ib20"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="ib20"
                app:srcCompat="@android:drawable/divider_horizontal_dark"
                android:scaleType="fitCenter"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/ib21"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="ib21"
                app:srcCompat="@android:drawable/divider_horizontal_dark"
                android:scaleType="fitCenter"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/ib22"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:onClick="ib22"
                app:srcCompat="@android:drawable/divider_horizontal_dark"
                android:scaleType="fitCenter" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingVertical="15dp"
            android:textSize="30sp"
            android:text="a" />

    </LinearLayout>


</LinearLayout>